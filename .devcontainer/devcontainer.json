{
  "name": "Camilo NANOGrav EDR",
  "image": "mcr.microsoft.com/devcontainers/miniconda:latest",
  "postCreateCommand": "conda env create -f environment.yml || conda env update -f environment.yml; echo 'Environment ready'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "remoteUser": "vscode"
}
